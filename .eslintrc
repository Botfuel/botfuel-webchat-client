{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "rules": {
    "import/order": ["error"],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.js",
          "**/*.babel.js",
          "/webpack.config.js"
        ]
      }
    ],
    "no-nested-ternary": "off"
  },
  "env": {
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
